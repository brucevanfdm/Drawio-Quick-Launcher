{
    "manifest_version": 3,
    "name": "Draw.io Quick Launcher",
    "version": "1.0",
    "description": "Open selected Draw.io XML in diagrams.net",
    "permissions": [
        "contextMenus"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.google.com/*",
                "*://*.chatgpt.com/*",
                "*://claude.ai/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}